<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddUserActivity">

    <LinearLayout
        android:id="@+id/idLLUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--edit text for our user name-->
        <EditText
            android:id="@+id/idEdtName"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:hint="Enter Name" />

        <!--edit text for our user surname-->
        <EditText
            android:id="@+id/idEdtSurname"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:hint="Enter Surname" />

        <!--edit text for user date of birth-->
        <EditText
            android:id="@+id/idEdtDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="10dp"
            android:hint="Date Of Birth" />

        <!--button for saving data to room database-->
        <Button
            android:id="@+id/idBtnSaveUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Save your user"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>